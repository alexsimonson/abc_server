{
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "knex": "^3.1.0",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "knex migrate:latest --env development",
    "rollback": "knex migrate:rollback --env development",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "db:setup": "knex migrate:latest && knex seed:run",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:serial": "jest --runInBand"
  }
}
