# Server configuration
PORT=4001
NODE_ENV=development

# Session secret for authentication (change this in production!)
SESSION_SECRET=dev-secret-change-me-in-production

# CORS configuration for development
# Leave empty for automatic local network detection
# Or set specific origins: ALLOWED_ORIGINS=http://192.168.1.5:3001,http://10.0.0.50:3001
ALLOWED_ORIGINS=

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/abc_site

# Square Payment Integration
# Get these from https://developer.squareup.com/apps
# SQUARE_ENV should be 'sandbox' for testing or 'production' for live
SQUARE_ENV=sandbox
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_LOCATION_ID=your_square_location_id
# Optional: if using webhooks (not needed for LAN sandbox testing)
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key
